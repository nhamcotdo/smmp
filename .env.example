# Database
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=smmp_db
DATABASE_SSL=false
DATABASE_POOL_MAX=10
DATABASE_POOL_MIN=2

# JWT
JWT_SECRET=your-secret-key-change-this
JWT_EXPIRES_IN=7d

# Threads API
THREADS_APP_ID=your-threads-app-id
THREADS_APP_SECRET=your-threads-app-secret
THREADS_REDIRECT_URI=https://threads-sample.meta:8000/api/channels/threads/callback

# Cloudflare R2 Storage (for file uploads)
R2_ACCOUNT_ID=your-r2-account-id
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_NAME=smmp-uploads
# Optional: Set a custom domain for R2 public access (recommended for production)
# R2_PUBLIC_DOMAIN=cdn.yourdomain.com

# Allowed origins for Next.js dev server
ALLOWED_DEV_ORIGINS=threads-sample.meta,localhost,127.0.0.1

# Server configuration
HOSTNAME=threads-sample.meta
PORT=8000

# Base URL for public file access (used for uploaded media)
NEXT_PUBLIC_BASE_URL=https://threads-sample.meta:8000

# Cron job secret (optional, for scheduled post publisher)
CRON_SECRET=your-cron-secret-key-here

JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=30d
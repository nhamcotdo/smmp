{
  "name": "smmp",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:https": "npx tsx watch dev-server-https.ts",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",

    "@types/passport-jwt": "^4.0.1",
    "bcrypt": "^6.0.0",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "jsonwebtoken": "^9.0.3",
    "next": "16.1.1",
    "passport": "^0.7.0",
